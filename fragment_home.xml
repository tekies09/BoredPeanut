<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtHomeTime"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:text="현재시간  \n설정안됨"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="메 인 페 이 지"
        android:textAlignment="center"
        android:textColor="#C4A045"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ViewFlipper
        android:id="@+id/vfHome"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHomeStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeTime">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/appicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text=" 어플을 이용해주셔서 감사합니다~ "
                android:textAlignment="center"
                android:textColor="#C4A045"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/chaticon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text=" 익명 다중 멀티채팅 대나무숲 운영중~ "
                android:textAlignment="center"
                android:textColor="#C4A045"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/questionicon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text=" 과연 제작자 Tekies 그는 누구인가? "
                android:textAlignment="center"
                android:textColor="#C4A045"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ViewFlipper>

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btnHomeStart"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:layout_marginBottom="48dp"
        android:text="슬라이드\n시작"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btnHomeEnd"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:text="슬라이드\n중지"
        app:layout_constraintBottom_toBottomOf="@+id/btnHomeStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeTime"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btnHomePrev"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:text="슬라이드\n이전"
        app:layout_constraintBottom_toBottomOf="@+id/btnHomeStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeTime"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btnHomeNext"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:text="슬라이드\n다음"
        app:layout_constraintBottom_toBottomOf="@+id/btnHomeStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeTime"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>